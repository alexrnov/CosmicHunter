<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="alexrnov.cosmichunter"> <!-- permit declare short name without full packet path as: android:name = ".ClassName"-->
    <!-- Tell the system this application requires OpenGL ES 3.0. -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-sdk android:minSdkVersion="14"
        android:targetSdkVersion="28"/>
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="alexrnov.cosmichunter.Initialization"
        android:hardwareAccelerated="true"> <!-- аппаратное ускорение -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize">
           <intent-filter>
               <!-- specify that the activity initiates the application -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:configChanges is used together with screenOrientation="landscape" -->
        <!--  screenSize attribute used with API level 13 or higher -->
        <activity
            android:name=".GameActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />
        <activity
            android:name=".LevelsActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            tools:targetApi="jelly_bean" />
        <activity android:name=".DialogCancelActivity"
            android:theme="@style/AppTheme.Dialog">
        </activity>

        <activity android:name=".DialogGameOverActivity"
            android:theme="@style/AppTheme.Dialog">
        </activity>
    </application>

</manifest>