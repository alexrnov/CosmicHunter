<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- in current project use for color radio buttons for version less than 21 -->
        <item name="colorAccent">@color/darkYellow</item>
        <!-- remove render problem coordinator layout -->
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <!-- that not be mistake with NoActionBar -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MenuLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="ButtonText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="TextAboutGame" parent="@android:style/TextAppearance">
        <item name="android:textColor">#585858</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinkAboutGame" parent="@android:style/TextAppearance">
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
